# Copy this file to .env and fill in your values
# See docs/setup/ for detailed instructions

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database URL for Drizzle
# Use the Transaction Mode pooled connection string from Supabase
# Format: postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=

# Test credentials for E2E testing (only in .env.test)
# CRITICAL: NO FALLBACKS - Tests will FAIL if these are not set!
# CLERK_TEST_EMAIL=  # REQUIRED - must match user in Clerk dashboard
# CLERK_TEST_PASSWORD=  # REQUIRED - must match user in Clerk dashboard  
# CLERK_FRONTEND_API_URL=  # REQUIRED - from your Clerk instance